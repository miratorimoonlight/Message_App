<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/image_view_chat_of_them"
            app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="1dp"
            app:civ_border_color="#fff"
            android:layout_marginStart="8dp" android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="I don't like to sleep alone and can you hear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_of_chat_from" app:layout_constraintStart_toEndOf="@+id/image_view_chat_of_them"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/image_view_chat_of_them"
            android:padding="16dp"
            android:maxWidth="250dp"
            android:background="@drawable/rounded_edge_field" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>