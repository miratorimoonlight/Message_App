<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/image_view_chat_of_me"
            android:layout_marginTop="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Same here bro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_of_chat_to"
            app:layout_constraintTop_toTopOf="@+id/image_view_chat_of_me"
            android:padding="16dp"
            android:maxWidth="250dp"
            android:background="@drawable/rounded_edge_field" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/image_view_chat_of_me"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>